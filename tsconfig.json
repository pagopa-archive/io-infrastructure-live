{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es6",
    "alwaysStrict": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "strictFunctionTypes": true,
    "sourceMap": true
  },
  "exclude": [
    "lib/**/local.*",
    "node_modules"
  ]
}
